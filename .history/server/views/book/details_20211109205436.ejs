<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Survey name</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the Book Title"
                    name="Title" required>
                </div>
                
                <div class="form-group">
                    <label for="descriptionTextArea">Question 1</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the book"
                    name="Description" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="priceTextField">Question 2</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Book's Price"
                    name="Price" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Question 3</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    name="Author" required>
                </div>

                <div class="form-group">
                    <label for="genreTextField">Question 4</label>
                    <input type="text" class="form-control"
                    id="genreTextField"
                    placeholder="Genre"
                    name="Genre" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>





<%- include ../partials/footer.ejs %>