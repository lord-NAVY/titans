<%- include('../partials/header.ejs'); %>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1>Create A Survey</h1>
            
            <div class="form-group row mb-4 mt-4 ">
		<input class="form-control form-control-lg inputBackground" type="text" placeholder="Survey Name" id="title" name="title" required="">
	</div>

            <!-- Start and End Survey Date !-->
            <div class="form-group row justify-content-md-center mb-4">
		<input class="col-md-4 form-control form-control-lg inputBackground" type="date" id="startDate" name="startDate" required="">
	        </div>

            <div class="form-group row justify-content-md-center mb-4">
		<input class="col-md-4 form-control form-control-lg inputBackground" type="date" id="endDate" name="endDate" required="">
	        </div>

            <!-- Questions List !-->
            <div class="form-group row justify-content-around mb-md-5">
		<input class="form-control col-md-5 form-control-lg inputBackground" type="text" placeholder="Question 1" id="question1" name="question1" required="">
	</div>

           <button type="submit" class="btn btn-lg btn-success m-3">Submit</button>
           <a class="btn btn-lg btn-danger m-3" href="/">Cancel</a>
        </div>
      </div>
    </div>
<%- include('../partials/footer.ejs'); %>